#include<bits/stdc++.h>
using namespace std;
int k,n,ll,a[10000005];

bool judge(int mid)
{
    int tot = 0;
    for(int i = 2;i <= n;++i)
    {
        if(a[i] - a[i-1] >=mid)
            tot += (a[i] - a[i-1])/mid;
        if((a[i] - a[i-1]) % mid == 0)
            tot--;
    }
    return tot <= k;
}
int main()
{
    cin>>ll>>n>>k;
   for(int i = 1;i <=n;++i)
    cin>>a[i];
    int l = 1,r = ll;
    while(l < r)
    {
        int mid = l + r>>1;
      if(judge(mid))
      {
          r = mid;
      }

      else
        l = mid + 1;

    }
    cout<<l;

}
