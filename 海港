#include<bits/stdc++.h>
using namespace std;
int nation [100005];
int ans,n,t,m,x;
struct node{
int t,s;
};
queue<node>ship;
node h;
int main()
{
    scanf("%d",&n);
   for(int i = 0;i < n;++i)
   {
       scanf("%d%d",&t,&m);
       while(!ship.empty())
       {
           h = ship.front();
           if(h.t+86400<=t)
           {
               nation[h.s]--;
               if(nation[h.s]==0) ans--;
               ship.pop();
               continue;
           }
           break;
       }
       for(int j = 0;j < m;++j)
       {
           scanf("%d",&x);
           h.s = x,h.t = t;
           ship.push(h);
           nation[x]++;
           if(nation[x]==1)
            ans++;
       }
       cout<<ans<<endl;
   }

    return 0;
}
