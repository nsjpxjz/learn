#include<bits/stdc++.h>
using namespace std;
const int N=100005;
int c[N];
int n;
int w;
int Max=-1;
int x,y,z;
int lowbit(int x)
{
	return x&(-x);
}
void update(int x,int v)
{
	while(x<=n)
	{
		c[x]+=v;
		x+=lowbit(x);
	}
}
int sum(int x)
{
	int res=0;
	while(x>0)
	{
		res+=c[x];
		x-=lowbit(x);
	}
	return res;
}
int main()
{
	scanf("%d%d",&n,&w);
	for(int i=1;i<=n;i++)
		scanf("%d%d",&x,&y),update(x,y);
	for(int i=w;i<=100000;i++)
	{
		Max=max(Max,sum(i-1)-sum(i-w-1));
	}
	printf("%d\n",Max);
	return 0;
}
